{
    "compilerOptions": {
        "target": "ES2020", // Specify ECMAScript target version
        "module": "CommonJS", // Specify module code generation
        "outDir": "./dist", // Redirect output structure to the directory
        "rootDir": "./src", // Specify the root directory of input files
        // "strict": true, // Enable all strict type-checking options
        "esModuleInterop": true, // Enable import interoperability between ES and CommonJS modules
        "skipLibCheck": true, // Skip type checking of declaration files
        "forceConsistentCasingInFileNames": true // Ensure consistent casing in module names
    },
    "include": ["src"], // Include all files in the src directory
    "exclude": ["node_modules", "dist"] // Exclude node_modules and dist directories
}
